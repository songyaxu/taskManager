<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.taskmanager.entity.TaskMap" table="taskmap">
		<id name="id" column="id" type="int">
			<generator class="identity"> 
			</generator>
		</id>
		<property name="taskId" column="taskId" type="int"></property>
		<property name="taskName" column="taskName" type="string"></property>
		<property name="studentId" column="studentId" type="int"></property>
		<property name="studentName" column="studentName" type="string"></property>
		<property name="teacherId" column="teacherId" type="int"></property>
		<property name="teacherName" column="teacherName" type="string"></property>
		<property name="courseNo" column="courseNo" type="string"></property>
		<property name="courseName" column="courseName" type="string"></property>
		<property name="state" column="state" type="int"></property>
		<property name="content" column="content" type="text"></property>
		<property name="attach" column="attach" type="string"></property>
		<property name="time" column="time" type="timestamp"></property>
		<property name="score" column="score" type="int"></property>
	</class>
</hibernate-mapping>

